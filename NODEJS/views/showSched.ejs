<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Show Schedule</title>
    <style>
    </style>
</head>
<body>
    <%- include('banner.ejs') %>
    <div id="mainContent">
    <h1> Schedule for <%= day %> </h1>
    <div id = "videoPanel">
    <div class="scheduleItem">
        <p>Title</p>
        <p>Time Start</p>
        <p>Time End</p>
        <div id="titleFill"></div>
        <div id="titleFill"></div>
    </div>
    <% if(result.length > 0) { %>
        <% result.forEach(result=>{ %>
            <div class="scheduleItem">
                <p><%= result.title %></p>
                <p><%= result.timestart %></p>
                <p><%= result.timeend %></p>
                <form method="POST" action="/deleteSchedule/<%= result.scheduleid%>/<%= day%>">
                    <button type="submit"><img src="/Trash.png"></button>
                </form>
            </div>
        <%})%>
    <% }%>
    </div>
    <div class="backbutton3">
    <a href="/addSchedulePage/<%= day%>"><button>Add Schedule</button></a>
        </div>
    </div>
    <div class="backbutton2">
        <button type="button" class="backButton" onclick="history.back()">Back</button>
    </div>
</body>
</html>